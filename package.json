{
	"name": "foldercode",
	"displayName": "FolderCode",
	"description": "",
	"version": "1.0.5",
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"menus": {
			"explorer/context": [
				{
					"command": "extension.folderCode",
					"group": "zzz-folderCode",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"commands": [
			{
				"command": "extension.folderCode",
				"title": "FolderCode",
				"arguments": [
					"${uri}"
				]
			}
		],
		"configuration": {
			"title": "FolderCode",
			"properties": {
				"folderCode.maxLinesPerFile": {
					"type": "integer",
					"default": 500,
					"description": "Maximum number of lines per file. Files with more lines will be cropped."
				},
				"folderCode.warningThreshold": {
					"type": "integer",
					"default": 20,
					"description": "Minimum number of files to trigger a warning about too many files."
				},
				"folderCode.ignore": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						".git",
						".svn",
						".gitignore",
						".vscode",
						".vs",
						".idea",
						".DS_Store",
						"node_modules",
						"bower_components",
						"jspm_packages",
						"vendor",
						"tmp",
						"temp",
						"cache",
						"logs",
						"*.lock",
						"*.log",
						"*.svg",
						"*.md",
						"*.min.*",
						"*-lock.json"
					],
					"description": "List of files/folders to ignore when parsing files."
				}
			}
		}
	},
	"publisher": "enriquemorenotent",
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.76.0",
		"@vscode/test-electron": "^2.2.3",
		"eslint": "^8.34.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/enriquemorenotent/vscode-extension-foldercode"
	},
	"license": "MIT",
	"icon": "icon.png",
	"dependencies": {
		"isbinaryfile": "^5.0.0",
		"minimatch": "^7.4.2"
	}
}
